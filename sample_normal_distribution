#param <- list(mu, cov)
sample_normal_distribution <- function(param, N){
  mu <- param[[1]]
  cov <- param[[2]]
  
  R <- chol(cov)
  
  # Generate standard normal samples
  Z <- matrix(rnorm(N*d), ncol = d)
  
  # Apply linear transformation to adjust mean and covariance
  datum <- t(t(R) %*% t(Z)) + mu
  
  return(datum)
}

